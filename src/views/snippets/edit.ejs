<link rel="stylesheet" href="./css/edit.css">

<h1>Edit Snippet</h1>
<form action="./snippets/snippets_list/edit/<%= snippet._id %>" method="POST">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" value="<%= snippet.title %>" required>

  <label for="content">Content</label>
  <textarea name="content" id="content" rows="5" required><%= snippet.content %></textarea>

  <button class="save" type="submit">Save</button>
</form>


